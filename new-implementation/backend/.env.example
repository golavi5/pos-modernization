# ── Application ───────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3000
APP_URL=https://api.tu-dominio.com

# ── Database (MySQL) ───────────────────────────────────────────────────────────
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=pos_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=pos_db

# ── JWT Authentication ─────────────────────────────────────────────────────────
JWT_SECRET=CHANGE_ME_RANDOM_64_CHAR_STRING_HERE
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=CHANGE_ME_ANOTHER_RANDOM_64_CHAR_STRING
JWT_REFRESH_EXPIRES_IN=7d

# ── CORS ──────────────────────────────────────────────────────────────────────
CORS_ORIGINS=https://app.tu-dominio.com,https://tu-dominio.com

# ── Optional: Rate Limiting ────────────────────────────────────────────────────
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
